{
  "rules": {
    "require-name": "error",
    "require-version": "error",
    "require-description": "error",
    "require-author": "error",
    "require-license": "error",
    "require-keywords": "warning",
    "require-homepage": "warning",
    "require-contributors": "warning",
    "require-repository": "warning",
    "name-type": "error",
    "version-type": "error",
    "description-type": "error",
    "license-type": "error",
    "private-type": "error",
    "keywords-type": "error",
    "homepage-type": "error",
    "bin-type": "error",
    "main-type": "error",
    "repository-type": "error",
    "scripts-type": "error",
    "dependencies-type": "error",
    "devDependencies-type": "error",
    "peerDependencies-type": "error",
    "config-type": "error",
    "no-git-dependencies": "warning",
    "no-file-dependencies": "error",
    "prefer-alphabetical-dependencies": "error",
    "no-git-devDependencies": "warning",
    "no-file-devDependencies": "error",
    "prefer-alphabetical-devDependencies": "error",
    "prefer-alphabetical-peerDependencies": "error",
    "prefer-alphabetical-scripts": "error",
    "name-format": "error",
    "version-format": "error",
    "description-format": ["error", {
      "requireCapitalFirstLetter": true
    }],
    "no-duplicate-properties": "error",
    "prefer-property-order": ["error", [
      "name",
      "version",
      "description",
      "author",
      "license",
      "private",
      "keywords",
      "homepage",
      "bugs",
      "contributors",
      "repository",
      "main",
      "bin",
      "scripts",
      "dependencies",
      "devDependencies",
      "peerDependencies",
      "config",
      "husky",
      "commitlint",
      "workspaces",
      "publishConfig"
    ]],
    "prefer-no-optionalDependencies": "error"
  }
}
